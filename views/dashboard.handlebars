{{!-- Quiz Selector (Card)--}}
<div class="col">
<div class="container card mt-5">
<div class="card-title text-center">
<h2 class="card-title">Take A Quiz!</h2>
</div>
<div class="card-body">
<select id="quizTopic" class="form-select form-select-lg mb-3" aria-label="Large select example">
  <option selected>Select Your Quiz Topic</option>
  <option>Animals</option>
  <option>General Knowledge</option>
  <option>Entertainment: Books</option>
  <option>Entertainment: Film</option>
  <option>Entertainment: Music</option>
  <option>Entertainment: Musicals and Theatre</option>
  <option>Entertainment: Television</option>
  <option>Entertainment: Video Games</option>
  <option>Entertainment: Board Games</option>
  <option>Science and Nature</option>
  <option>Computer Science</option>
  <option>Mathematics</option>
  <option>Mythology</option>
  <option>Sports</option>
  <option>Geography</option>
  <option>History</option>
  <option>Politics</option>
  <option>Art</option>
  <option>Celebrities</option>
  <option>Vehicles</option>
  <option>Entertainment: Comics</option>
  <option>Science: Gadgets</option>
  <option>Entertainment: Japanese Anime And Manga</option>
  <option>Entertainment: Cartoon And Animations</option>
</select>

<select id="quizLength" class="form-select form-select-lg mb-3" aria-label="Large select example">
  <option selected>Select The Number Of Questions You Want In Your Quiz</option>
  <option>5</option>
  <option>10</option>
  <option>15</option>
  <option>20</option>
  <option>25</option>
  <option>30</option>
</select>

<select id="quizDifficulty" class="form-select form-select-lg mb-3" aria-label="Large select example">
  <option selected>Select The Difficulty Of Your Quiz </option>
  <option>Easy</option>
  <option>Medium</option>
  <option>Hard</option>
</select>

<button id="startQuizBtn" type="button" class="btn btn-primary btn-lg">Start Quiz!</button>
</div>
</div>
</div>
</div>
<script src="/js/dashboard.js"></script>
