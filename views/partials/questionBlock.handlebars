{{!-- This partial is going to store the individual question blocks that will be dynamically generated through answering a question --}}
<div class="container">
<div class="card text-center">
  <div class="card-header">
    {{question}}
  </div>
  <div class="card-body">
    <p>{{answer[0]}}</p><a href="#" class="btn btn-primary">A</a>
    <p>{{answer[1]}}</p><a href="#" class="btn btn-primary">B</a>
    <p>{{answer[2]}}</p><a href="#" class="btn btn-primary">C</a>
    <p>{{answer[3]}}</p><a href="#" class="btn btn-primary">D</a>
   
  </div>
</div>
</div>